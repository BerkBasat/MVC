@{
    ViewBag.Title = "Index";
}

<div class="container mt-5">
    <div class="row">
        @foreach (var product in TempData["Products"] as List<MVC_Area.Models.Product>)
        {
            <div class="col-md-3 mt-3">
                <div class="card" style="width: 18rem;">
                    <img src="https://socialistmodernism.com/wp-content/uploads/2017/07/placeholder-image.png?w=640" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>

                        <p class="card-text">@product.UnitPrice</p>
                        <a href="#" class="btn btn-primary mx-auto">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


