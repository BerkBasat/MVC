
@{
    ViewBag.Title = "AddEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:70px;">
    <div class="row">
        <div col="col-md-4">
            <div>
                <form method="post">
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="LastName">LastName</label>
                        <input type="text" class="form-control" placeholder="Last Name" name="LastName">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="FirstName">FirstName</label>
                        <input type="text" class="form-control" placeholder="First Name" name="FirstName">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="Title">Title</label>
                        <input type="text" class="form-control" placeholder="Title" name="Title">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="TitleOfCourtesy">TitleOfCourtesy</label>
                        <input type="text" class="form-control" placeholder="Title Of Courtesy" name="TitleOfCourtesy">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="BirthDate">BirthDate</label>
                        <input type="text" class="form-control" placeholder="Birth Date" name="BirthDate">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="HireDate">HireDate</label>
                        <input type="text" class="form-control" placeholder="Hire Date" name="HireDate">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="Address">Address</label>
                        <input type="text" class="form-control" placeholder="Address" name="Address">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="City">City</label>
                        <input type="text" class="form-control" placeholder="City" name="City">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="Region">Region</label>
                        <input type="text" class="form-control" placeholder="Region" name="Region">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="PostalCode">PostalCode</label>
                        <input type="text" class="form-control" placeholder="Postal Code" name="PostalCode">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="Country">Country</label>
                        <input type="text" class="form-control" placeholder="Country" name="Country">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="HomePhone">HomePhone</label>
                        <input type="text" class="form-control" placeholder="Home Phone" name="HomePhone">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="Extension">Extension</label>
                        <input type="text" class="form-control" placeholder="Extension" name="Extension">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="Photo">Photo</label>
                        <input type="text" class="form-control" placeholder="Photo" name="Photo">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="Notes">Notes</label>
                        <input type="text" class="form-control" placeholder="Notes" name="Notes">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="ReportsTo">ReportsTo</label>
                        <input type="text" class="form-control" placeholder="Reports To" name="ReportsTo">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="PhotoPath">PhotoPath</label>
                        <input type="text" class="form-control" placeholder="Photo Path" name="PhotoPath">
                    </div>
                    <button style="margin-bottom:10px; margin-top:10px;" type="submit" class="btn btn-primary">Add Employee</button>
                </form>
            </div>
        </div>
    </div>
</div>

