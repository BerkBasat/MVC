
@{
    ViewBag.Title = "AddCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:70px;">
    <div class="row">
        <div col="col-md-4">
            <div>
                <form method="post">
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="CustomerID">CustomerID</label>
                        <input type="text" class="form-control" placeholder="Customer ID" name="CustomerID">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="CompanyName">CompanyName</label>
                        <input type="text" class="form-control" placeholder="Company Name" name="CompanyName">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="ContactName">ContactName</label>
                        <input type="text" class="form-control" placeholder="Contact Name" name="ContactName">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="ContactTitle">ContactTitle</label>
                        <input type="text" class="form-control" placeholder="Contact Title" name="ContactTitle">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="Address">Address</label>
                        <input type="text" class="form-control" placeholder="Address" name="Address">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="City">City</label>
                        <input type="text" class="form-control" placeholder="City" name="City">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="Region">Region</label>
                        <input type="text" class="form-control" placeholder="Region" name="Region">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="PostalCode">PostalCode</label>
                        <input type="text" class="form-control" placeholder="Postal Code" name="PostalCode">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="Country">Country</label>
                        <input type="text" class="form-control" placeholder="Country" name="Country">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="Phone">Phone</label>
                        <input type="text" class="form-control" placeholder="Phone Number" name="Phone">
                    </div>
                    <div class="form-group">
                        <label style="margin-bottom:10px; margin-top:10px;" for="Fax">Fax</label>
                        <input type="text" class="form-control" placeholder="Fax" name="Fax">
                    </div>
                    <button style="margin-bottom:10px; margin-top:10px;" type="submit" class="btn btn-primary">Add Customer</button>
                </form>
            </div>
        </div>
    </div>
</div>



